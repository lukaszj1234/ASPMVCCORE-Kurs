<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
        asp-href-include="~/lib/bootstrap/css/bootstrap.css"
        asp-href-exclude="~/lib/bootstrap/css/bootstrap-grid.css" />
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <title>SportStore</title>
</head>
<body>
    <div class="navbar navbar-inverse bg-dark" role="navigation">
        <div class="row col-md-12">
            <a class="col navbar-brand" href="#">Sklep sportowy</a>
            <div class="col-12 text-right">
                @await Component.InvokeAsync("CartSummary")
            </div> 
        </div>
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            @await Component.InvokeAsync("NavigationMenu") 
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>
